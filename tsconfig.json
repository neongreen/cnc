{
  "compilerOptions": {
    "lib": [
      "ES2015",
      "DOM"
    ],
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noEmit": true,
    "module": "preserve",
    "target": "ES2017",
    "skipLibCheck": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": [
      "vitest/importMeta"
    ]
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "build/app/types/**/*.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
